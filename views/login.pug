extends base
    
block content
  main
    .container-fluid.form-container.d-flex.align-items-center
      form#loginForm.form
        fieldset
          legend.fw-bolder.text-primary Login
          .mb-3
            label.form-label(for="email") Email address
            input#email.form-control(type="email" aria-describedby="emailHelp" name="email" required)
          .mb-3
            label.form-label(for="password") Password
            input#password.form-control(type="password" name="password" required)
          p
            | New Here?  
            a(href="/signup") signup
          button.btn.btn-primary(type="submit" name="btnSubmit") Login